    <script>
        function checkAnswer(isCorrect)
            if (isCorrect) {
                alert("Congratulations! You chose the right option!");
            } else {
                alert("Oops! This is the wrong option");
            }
            let reason = prompt("Why did you make this choice?");
            if (reason) {
                alert("Your reason: " + reason);
            } else {
                alert("No reason provided.");
            }
        }
    </script>
